doctype html
html
  head
    title Weather Forecast
  body
    h1 Weather Forecast
    table
      thead
        tr
          th Date
          th Temperature
          th Humidity
          th Wind Speed
      tbody
      if forecast
        each forecast, i in forecast
          tr
            td= forecast.dt_txt
            td= forecast.main.temp
            td= forecast.main.humidity
            td= forecast.wind.speed
    //- if forecast.length === 0
      p No forecast data available for this city
